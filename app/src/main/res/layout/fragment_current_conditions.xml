<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aaronhoskins.mobile_nat_challange.view.CurrentConditionsFragment.CurrentConditionsFragment">

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/colorPrimary">

       <RelativeLayout
           android:layout_width="175dp"
           android:layout_height="175dp">
       <ImageView
           android:id="@+id/ivWeatherImage"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:scaleType="fitXY"
           />
       <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tvTemperature"
            android:layout_width="match_parent"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_height="match_parent"
            />
       </RelativeLayout>
        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            >
            <TextView
                android:id="@+id/tvLocation"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="45dp"
                />
            <TextView
                android:id="@+id/tvCurrentWeather"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvWindCondition"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvRelativeHumidity"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvFeelsLike"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

   </LinearLayout>

</FrameLayout>
