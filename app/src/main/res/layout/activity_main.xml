<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aaronhoskins.mobile_nat_challange.view.main_activity.MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <EditText
            android:id="@+id/etZipCode"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/oval_edit_text_background"/>
        <Button
            android:text="Change Zip"
            android:onClick="onClickSetZip"
            android:id="@+id/btnSetZip"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:gravity="center"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/flCurrentConditions"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/flForecast"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
